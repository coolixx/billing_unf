
&НаКлиенте
Процедура Расш1_bs_ЗаполнитьСервисыПоIDВместо(Команда)
	
	ID = Объект.bs_IDГРМ;
	
	Если НЕ ЗначениеЗаполнено(ID) Тогда
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = "Поле ID не заполнено";
		Сообщение.Поле = "Объект.bs_IDГРМ";
		Сообщение.Сообщить();
		Возврат;
	КонецЕсли;
	
	НастройкаБиллинга = BS_БиллингВызовСервера.ПолучитьНастройкуБиллингаПоID(ID);
	
	BS_БиллингКлиентСервер.ЗагрузитьСервисыКонтрагента(НастройкаБиллинга, ID);
	
КонецПроцедуры
